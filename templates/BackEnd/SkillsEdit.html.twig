{% extends "base.html.twig" %}

{% block title %}Page d'édition des compétences{% endblock %}

{% block body %}

	<section class="skill-create">
		<div class="form-skill-create">
			{{ form_start(form, {'attr': {'class': 'skill-create-form'} }) }}
				{{ form_widget(form.Titre, {'attr': {'placeholder': 'Nom de la compétence'} }) }}
				{{ form_row(form.DateDebut)}}
				{{ form_row(form.DateFin)}}
				{{ form_widget(form.category) }}
				{{ form_row(form.save, {'attr': {'class': 'btn-skill-create'} }) }}

			{{ form_end(form) }}
		</div>
	</section>

{% endblock %}
